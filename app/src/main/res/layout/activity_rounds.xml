<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoundsActivity" >

    <LinearLayout
        android:id="@+id/difficulty_rounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/difficulty_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/difficulty_levels"
            android:textAlignment="center"
            android:textColor="#1E4278"
            android:textSize="34sp"
            android:textStyle="bold|italic"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/result_round1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="4"
                android:text="@string/stub"
                android:textAlignment="center"
                android:textColor="#1E4278"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/start_round1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="#1E4278"
                android:text="@string/start_round_1"
                app:cornerRadius="10dp"
                app:rippleColor="#FF6600" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/result_round2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="4"
                android:text="@string/stub"
                android:textAlignment="center"
                android:textColor="#1E4278"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/start_round2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="#1E4278"
                android:text="@string/start_round_2"
                app:cornerRadius="10dp"
                app:rippleColor="#FF6600" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/result_round3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="4"
                android:text="@string/stub"
                android:textAlignment="center"
                android:textColor="#1E4278"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/start_round3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="#1E4278"
                android:text="@string/start_round_3"
                app:cornerRadius="10dp"
                app:rippleColor="#FF6600" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/result_round4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="4"
                android:text="@string/stub"
                android:textAlignment="center"
                android:textColor="#1E4278"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/start_round4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="#1E4278"
                android:text="@string/start_round_4"
                app:cornerRadius="10dp"
                app:rippleColor="#FF6600" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/result_round5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="4"
                android:text="@string/stub"
                android:textAlignment="center"
                android:textColor="#1E4278"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/start_round5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="#1E4278"
                android:text="@string/start_round_5"
                app:cornerRadius="10dp"
                app:rippleColor="#FF6600" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/result_round6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="4"
                android:text="@string/stub"
                android:textAlignment="center"
                android:textColor="#1E4278"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/start_round6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="#1E4278"
                android:text="@string/start_round_6"
                app:cornerRadius="10dp"
                app:rippleColor="#FF6600" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>